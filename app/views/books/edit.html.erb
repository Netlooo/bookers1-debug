<div>
  <%= flash[:notice] %>
</div>

<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>


  <div>
  <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>
